{{> navbar }}

<div class="container">
  <h1>Registration</h1>
  <p class="lead">Team registration.</p><br/>
  <form role="form" action="/api/register" method="post" style="max-width: 300px;">
    <div class="form-group">
      <input type="text" name="username" placeholder="Enter Username" class="form-control"/>
    </div>
    <div class="form-group">
      <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
    </div>
    <div class="form-group">
      <input type="password" name="password" placeholder="Password" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>&nbsp;<a href="/">
    <button type="button" class="btn btn-default">Cancel</button></a>
  </form>
</div>

{{> footer }}
