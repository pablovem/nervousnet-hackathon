{{> navbar }}

<div class="container">

  <div class="page-header">
    <h1>Submission <span class="submission">{{submission}}</span> <small>Details</small></h1>
  </div>
  
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <div class="well">
          <p>The graph displays propagation of average local and global error over time. Each point represents the average error across all users for certain time point. </p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div id="details"></div>
      </div>
    </div>

  </div>

</div>

<script>
var submission = d3.select(".submission").text();

var apiurl = "/api/submissions/" + submission;

var timeSeries = c3.generate({
  bindto  : '#details',
  data    : {
    url: apiurl,
    mimeType: 'json',
    hide: ['entropy','diversity']
  },
  zoom: {
    enabled: true
  }
});

</script>

